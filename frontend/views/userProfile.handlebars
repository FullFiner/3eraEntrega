<main id="main-userprofile">

    <section class="perfil-saldo">

        <section class="card-perfil">
            <header class="perfil-header">
                <img src="/images/creeperprofile.png" alt="Foto de perfil" class="perfil-img">
                <div class="perfil-info">
                    <h2>Hola, <span id="saludo-usuario">{{username}}</span>!</h2> 
                    <ul>
                        <li><strong>Usuario:</strong> <span id="usuario-nombre-perfil">{{username}}</span></li> 
                        <li><strong>Email:</strong> <span id="usuario-email">{{email}}</span></li>
                    </ul>
                </div>
            </header>
        </section>

        <section class="card-saldo">
            <header>
                <h2>Saldo Actual</h2>
            </header>
            <p class="monto" id="saldo-valor">{{saldo}} Fichas</p> 
            <section class="linea-decorativa"></section>
        </section>

    </section>

    <section class="card-transacciones">
