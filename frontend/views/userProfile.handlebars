                    <th>Monto</th>
                </tr>
            </thead>
            <tbody id="transacciones-body">
                {{#if transacciones}}
                    {{#each transacciones}}
                    <tr>
                        <td>{{this.fecha}}</td> 
                        <td>{{this.tipo}}</td> 
                        <td>{{this.monto}}</td> 
                    </tr>
                    {{/each}}
                {{else}}
                    <tr>
                        <td colspan="3">Cargando transacciones...</td>
                    </tr>
                {{/if}}
            </tbody>
        </table>
    </section>

